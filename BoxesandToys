import java.util.*;
import java.io.*;

public class Main {
  public static void main(String args[]) throws IOException {
    
    //write your code here
    Scanner sc = new Scanner(System.in);
    int count =0;
    int N = sc.nextInt();
    int t[] = new  int [100];
    int c[] = new  int [100];
    for(int i=0;i<N;i++){
       t[i] = sc.nextInt();
      c[i] = sc.nextInt(); 
      if(c[i]-t[i]>=2)
      count++;
    }
    System.out.println(count);
    
    
  }
}
